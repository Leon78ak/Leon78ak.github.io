mixin breadcrumbs(mods)

  //- Принимает:
  //-   mods  {string} - список модификаторов
  //- Вызов:
        +breadcrumbs()
          +breadcrumbs-item('Главная', '/home')
          +breadcrumbs-item('Услуги', '/services')
          +breadcrumbs-item('Стриптиз')
  -
    // список модификаторов
    var newMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        newMods = newMods + ' breadcrumbs--' + modsList[i].trim() + ' ';
      var allMods = newMods.trim();
      }
    }
  ul.breadcrumbs(class=` ${allMods}`, aria-label='Breadcrumbs', role='navigation')&attributes(attributes)
    block

