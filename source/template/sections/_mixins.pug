mixin icon(name,mod)
  - mod = ("icon--" + mod) || ''
  svg(class="icon  icon--" + name + '  ' + mod)&attributes({'width': '2rem', 'height': '2rem'})
    use(xlink:href="img/svg/sprite/symbol/sprite.svg#" + name)

